<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd" version="2.4">
    <display-name>QaArtifactCheck</display-name>
    <init-param>
        <param-name>compilerSourceVM</param-name>
        <param-value>1.5</param-value>
    </init-param>
    <init-param>
        <param-name>compilerTargetVM</param-name>
        <param-value>1.5</param-value>
    </init-param>
 
    <servlet>
        <servlet-name>armoryPolling</servlet-name>
        <servlet-class>de.mancino.servlets.ArmoryCacheServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>artifactCheck</servlet-name>
        <servlet-class>com.unitedinternet.portal.qa.artifactcheck.servlets.ArtifactCheck</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>artifactUpload</servlet-name>
        <servlet-class>com.unitedinternet.portal.qa.artifactcheck.servlets.ArtifactUpload</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>artifactQS</servlet-name>
        <servlet-class>com.unitedinternet.portal.qa.artifactcheck.servlets.ArtifactQS</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.unitedinternet.portal.qa.artifactcheck.servlets.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>com.unitedinternet.portal.qa.artifactcheck.servlets.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>adminlist</servlet-name>
        <servlet-class>com.unitedinternet.portal.qa.artifactcheck.servlets.AdminList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>artifactCheckText</servlet-name>
        <servlet-class>com.unitedinternet.portal.qa.artifactcheck.servlets.ArtifactCheckText</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>systemCheck</servlet-name>
        <servlet-class>com.unitedinternet.portal.qa.artifactcheck.servlets.SystemCheckServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>qs</servlet-name>
        <servlet-class>com.unitedinternet.portal.qa.artifactcheck.servlets.ApproveArtifact</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>artifactCheck</servlet-name>
        <url-pattern>/artifactcheck/check</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>artifactUpload</servlet-name>
        <url-pattern>/artifactcheck/upload</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>artifactQS</servlet-name>
        <url-pattern>/artifactcheck/admin/qs</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/artifactcheck/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>adminlist</servlet-name>
        <url-pattern>/artifactcheck/admin</url-pattern>
        <url-pattern>/artifactcheck/admin/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>qs</servlet-name>
        <url-pattern>/artifactcheck/admin/move</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>artifactCheckText</servlet-name>
        <url-pattern>/check</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>systemCheck</servlet-name>
        <url-pattern>/-system/check</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>logonfilter</filter-name>
        <filter-class>com.unitedinternet.portal.qa.artifactcheck.filter.LogonFilter</filter-class>
    </filter>
    <filter>
        <filter-name>adminfilter</filter-name>
        <filter-class>com.unitedinternet.portal.qa.artifactcheck.filter.AdminFilter</filter-class>
    </filter>
    <filter>
        <filter-name>genericfilter</filter-name>
        <filter-class>com.unitedinternet.portal.qa.artifactcheck.filter.GenericDataFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>logonfilter</filter-name>
        <url-pattern>/artifactcheck/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>adminfilter</filter-name>
        <url-pattern>/artifactcheck/admin/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>genericfilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Import Interface</web-resource-name>
            <url-pattern>/upload/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>user</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>ImportRealm</realm-name>
    </login-config>
    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/jsp/exception.jsp</location>
    </error-page>
</web-app>